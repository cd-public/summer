  <div id="background">
    <div id="spookster">
      <div id="peepers"></div>
      <!-- Short for booplesnoot -->
      <div id="snoot"></div>
      <div id="left-waggler"></div>
      <div id="right-waggler"></div>
    </div>
    <div id="feets">
      <div id="feet"></div>
      <div id="feet"></div>
      <div id="feet"></div>
      <div id="feet"></div>
    </div>
  </div>
</div>
```

